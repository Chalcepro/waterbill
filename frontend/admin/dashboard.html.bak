    <script>
        // Initialize the dashboard when DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile menu toggle
            const menuToggle = document.getElementById('menuToggle');
            const headerNav = document.getElementById('mainNav');
            
            if (menuToggle && headerNav) {
                menuToggle.addEventListener('click', () => {
                    menuToggle.classList.toggle('active');
                    headerNav.classList.toggle('show');
                    document.body.style.overflow = headerNav.classList.contains('show') ? 'hidden' : '';
                });
                
                // Close menu when clicking on a nav link
                document.querySelectorAll('.nav-link').forEach(link => {
                    link.addEventListener('click', () => {
                        menuToggle.classList.remove('active');
                        headerNav.classList.remove('show');
                        document.body.style.overflow = '';
                    });
                });
            }
            
            // Define all functions first
            async function checkAuth() {
                try {
                    const response = await fetch('../../api/auth/check-session.php', { credentials: 'include' });
                    const result = await response.json();

                    if (!result.authenticated || result.role !== 'admin') {
                        window.location.href = '../auth/login.html';
                    }
                } catch (error) {
                    window.location.href = '../auth/login.html';
                }
            }

            async function loadDashboardData() {
                try {
                    const response = await fetch('../../api/admin/dashboard-data.php', { credentials: 'include' });
                    const raw = await response.text();
                    let data;
                    try { 
                        data = JSON.parse(raw); 
                    } catch(parseErr) {
                        loadRecentPayments([]);
                        const container = document.querySelector('.admin-dashboard');
                        const diag = document.createElement('div');
                        diag.style.background = '#fff3cd';
                        diag.style.border = '1px solid #ffeeba';
                        diag.style.color = '#856404';
                        diag.style.padding = '10px 14px';
                        diag.style.margin = '10px 0';
                        diag.style.borderRadius = '6px';
                        diag.innerHTML = '<strong>Server returned non-JSON for dashboard-data.php</strong><br><pre style="white-space:pre-wrap">'+raw.replace(/</g,'&lt;')+'</pre>';
                        container.prepend(diag);
                        return;
                    }
                    if (!data.success) throw new Error(data.error || 'Failed');
                    document.getElementById('total-users').textContent = data.total_users || '0';
                    document.getElementById('pending-payments').textContent = data.pending_payments || '0';
                    document.getElementById('active-subscriptions').textContent = data.active_subscriptions || '0';
                    document.getElementById('open-faults').textContent = data.open_faults || '0';
                    loadRecentPayments(data.recent_payments || []);
                    loadSystemSettings(data.system_settings || {});
                } catch (error) {
                    console.error('Failed to load dashboard data:', error);
                    const tu = document.getElementById('total-users');
                    if (tu) tu.textContent = 'Error';
                    const pp = document.getElementById('pending-payments');
                    if (pp) pp.textContent = 'Error';
                    const as = document.getElementById('active-subscriptions');
                    if (as) as.textContent = 'Error';
                    const tr = document.getElementById('total-revenue');
                    if (tr) tr.textContent = 'Error';
                }
            }

            function loadRecentPayments(payments) {
                const tbody = document.querySelector('#recent-payments-table tbody');

                if (!tbody) return;
                if (payments.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="5">No recent payments</td></tr>';
                    return;
                }

                tbody.innerHTML = payments.map(payment => `
                    <tr>
                        <td>${payment.user_name}</td>
                        <td>₦${payment.amount}</td>
                        <td>${payment.method}</td>
                        <td>${payment.date}</td>
                        <td><span class="status-${payment.status}">${payment.status}</span></td>
                    </tr>
                `).join('');
            }

            function loadSystemSettings(settings) {
                const container = document.getElementById('system-settings');
                if (!container) return;

                const settingsHtml = Object.entries(settings).map(([key, value]) => `
                    <div class="setting-item">
                        <div class="setting-label">${key}</div>
                        <div class="setting-value">${value}</div>
                    </div>
                `).join('');

                container.innerHTML = settingsHtml || '<div class="setting-item"><div class="setting-label">No settings found</div></div>';
            }

            async function logout() {
                try {
                    await fetch('../../api/auth/logout.php', { method: 'POST', credentials: 'include' });
                    window.location.href = '../auth/login.html';
                } catch (error) {
                    window.location.href = '../auth/login.html';
                }
            }

            // Initialize dashboard data
            async function initDashboard() {
                try {
                    await checkAuth();
                    await loadDashboardData();
                } catch (error) {
                    console.error('Failed to load dashboard data:', error);
                    if (typeof notify !== 'undefined') {
                        notify.error('Failed to load dashboard data: ' + (error.message || 'Unknown error'));
                    }
                }
            }
            
            // Start dashboard initialization
            initDashboard();

        });

        // Export reports function
        function exportReports(format) {
            const url = `../../api/admin/export-payments.php?format=${format}`;
            window.open(url, '_blank');
        }

        // ---------- Footer toggle & drag logic (unchanged) ----------
        let isFooterVisible = false;
        let isDragging = false;
        let dragOffset = { x: 0, y: 0 };

        const footerToggle = document.getElementById('footerToggle');
        const mainFooter = document.getElementById('mainFooter');

        function toggleFooter() {
            if (!isDragging) {
                isFooterVisible = !isFooterVisible;
                if (isFooterVisible) {
                    mainFooter.style.display = 'block';
                    mainFooter.classList.remove('hiding');
                    footerToggle.innerHTML = '<i class="fas fa-times"></i>';
                } else {
                    mainFooter.classList.add('hiding');
                    footerToggle.innerHTML = '<i class="fas fa-info-circle"></i>';
                    setTimeout(() => {
                        mainFooter.style.display = 'none';
                        mainFooter.classList.remove('hiding');
                    }, 300);
                }
            }
        }

        // drag & touch handlers for footer toggle
        if (footerToggle) {
            footerToggle.addEventListener('mousedown', (e) => {
                isDragging = false;
                dragOffset.x = e.clientX - footerToggle.offsetLeft;
                dragOffset.y = e.clientY - footerToggle.offsetTop;
                footerToggle.classList.add('dragging');
            });

            document.addEventListener('mousemove', (e) => {
                if (footerToggle.classList.contains('dragging')) {
                    isDragging = true;
                    const x = e.clientX - dragOffset.x;
                    const y = e.clientY - dragOffset.y;
                    const maxX = window.innerWidth - footerToggle.offsetWidth;
                    const maxY = window.innerHeight - footerToggle.offsetHeight;
                    footerToggle.style.left = Math.max(0, Math.min(x, maxX)) + 'px';
                    footerToggle.style.top = Math.max(0, Math.min(y, maxY)) + 'px';
                    footerToggle.style.right = 'auto';
                    footerToggle.style.bottom = 'auto';
                }
            });

            document.addEventListener('mouseup', () => {
                if (footerToggle.classList.contains('dragging')) {
                    footerToggle.classList.remove('dragging');
                    setTimeout(() => { isDragging = false; }, 100);
                }
            });

            footerToggle.addEventListener('click', toggleFooter);

            // touch
            footerToggle.addEventListener('touchstart', (e) => {
                isDragging = false;
                const touch = e.touches[0];
                dragOffset.x = touch.clientX - footerToggle.offsetLeft;
                dragOffset.y = touch.clientY - footerToggle.offsetTop;
                footerToggle.classList.add('dragging');
                e.preventDefault();
            });

            document.addEventListener('touchmove', (e) => {
                if (footerToggle.classList.contains('dragging')) {
                    isDragging = true;
                    const touch = e.touches[0];
                    const x = touch.clientX - dragOffset.x;
                    const y = touch.clientY - dragOffset.y;
                    const maxX = window.innerWidth - footerToggle.offsetWidth;
                    const maxY = window.innerHeight - footerToggle.offsetHeight;
                    footerToggle.style.left = Math.max(0, Math.min(x, maxX)) + 'px';
                    footerToggle.style.top = Math.max(0, Math.min(y, maxY)) + 'px';
                    footerToggle.style.right = 'auto';
                    footerToggle.style.bottom = 'auto';
                    e.preventDefault();
                }
            });

            document.addEventListener('touchend', () => {
                if (footerToggle.classList.contains('dragging')) {
                    footerToggle.classList.remove('dragging');
                    setTimeout(() => { isDragging = false; }, 100);
                }
            });
        }
    </script>

